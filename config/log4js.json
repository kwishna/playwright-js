{
    "appenders": {
        "access": {
            "type": "dateFile",
            "filename": "log/access_%d{yyyy/MM/dd-hh.mm.ss.SSS}.log",
            "pattern": "-yyyy-MM-dd",
            "category": "http"
        },
        "app": {
            "type": "file",
            "filename": "log/app.log",
            "maxLogSize": 10485760,
            "numBackups": 3
        },
        "errorFile": {
            "type": "file",
            "filename": "log/errors.log"
        },
        "errors": {
            "type": "logLevelFilter",
            "level": "ERROR",
            "appender": "errorFile"
        }
    },
    "categories": {
        "default": {
            "appenders": [
                "app",
                "errors"
            ],
            "level": "DEBUG"
        },
        "http": {
            "appenders": [
                "access"
            ],
            "level": "DEBUG"
        }
    }
}